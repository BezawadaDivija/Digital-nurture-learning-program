    <button class="btn btn-success">
      <i class="bi bi-check-circle"></i> Confirm
    </button>
  </div>

  <!-- Link to downloaded Bootstrap JS bundle -->
  <script src="bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
