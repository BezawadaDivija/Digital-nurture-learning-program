<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Dashboard Layout</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
</head>
<body>

<div class="container-fluid p-4">
  <!-- Header -->
  <div class="p-4 mb-4 bg-primary text-white text-center rounded">
    <h1>Dashboard</h1>
    <p class="mb-0">Overview of system metrics</p>
  </div>

  <!-- Dashboard Cards -->
  <div class="row g-4">
    <div class="col-md-4">
      <div class="p-4 bg-warning text-dark rounded">
        <h4>Revenue</h4>
        <p>$45,000 this month</p>
      </div>
    </div>
    <div class="col-md-4">
      <div class="p-4 bg-success text-white rounded">
        <h4>Users</h4>
        <p>2,400 active users</p>
      </div>
    </div>
    <div class="col-md-4">
      <div class="p-4 bg-danger text-white rounded">
        <h4>Issues</h4>
        <p>23 reported issues</p>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
